<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rtc_audience_debugLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:background="#77000000"
        android:orientation="vertical"
        android:paddingBottom="15dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:visibility="visible">
        <TextView
            android:id="@+id/rtc_audience_localConnectStatusDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rtc_audience_messageDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rtc_audience_joinedUsersDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rtc_audience_txBandwidthDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rtc_audience_rxBandwidthDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/broadcaster_video_view_container1"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_marginLeft="@dimen/remote_view1_margin_left"
        android:layout_marginTop="100dp"/>

    <FrameLayout
        android:id="@+id/broadcaster_video_view_container2"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_marginLeft="@dimen/remote_view2_margin_left"
        android:layout_marginTop="100dp"/>

    <FrameLayout
        android:id="@+id/broadcaster_video_view_container3"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_marginLeft="@dimen/remote_view3_margin_left"
        android:layout_marginTop="100dp"/>

</FrameLayout>